{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "datasource",
      "id": "loki",
      "name": "Loki",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "row",
      "title": "System Health (Host Metrics)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "collapsed": false
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "avg(1 - rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 }] }
        }
      }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 1 },
      "targets": [
        {
          "expr": "(1 - (avg(node_memory_MemAvailable_bytes) / avg(node_memory_MemTotal_bytes))) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 }] }
        }
      }
    },
    {
      "id": 4,
      "title": "Disk Usage (Root)",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": " ( (node_filesystem_size_bytes{mountpoint=\" / \"} - node_filesystem_free_bytes{mountpoint=\" / \"}) / node_filesystem_size_bytes{mountpoint=\" / \"} ) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 }] }
        }
      }
    },
    {
      "id": 5,
      "title": "Network I/O",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "targets": [
        { "expr": "sum(rate(node_network_receive_bytes_total[5m]))", "legendFormat": "Received" },
        { "expr": "sum(rate(node_network_transmit_bytes_total[5m]))", "legendFormat": "Transmitted" }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } }
    },
    {
      "id": 16,
      "title": "CPU Usage Over Time",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "avg(1 - rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100",
          "legendFormat": "CPU Usage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 }] }
        }
      }
    },
    {
      "id": 17,
      "title": "Memory Usage Over Time",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "(1 - (avg(node_memory_MemAvailable_bytes) / avg(node_memory_MemTotal_bytes))) * 100",
          "legendFormat": "Memory Usage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 }] }
        }
      }
    },
    {
      "id": 18,
      "title": "System Load Average",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 17 },
      "targets": [
        { "expr": "node_load1", "legendFormat": "1m" },
        { "expr": "node_load5", "legendFormat": "5m" },
        { "expr": "node_load15", "legendFormat": "15m" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 19,
      "title": "Disk I/O Utilization",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 17 },
      "targets": [
        {
          "expr": "rate(node_disk_io_time_seconds_total{device!~\"rootfs|dm-.*\"}[1m]) * 100",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 30, "gradientMode": "opacity", "lineInterpolation": "smooth" }
        }
      }
    },
    {
      "id": 20,
      "title": "Network Traffic by Interface",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 17 },
      "targets": [
        { "expr": "rate(node_network_receive_bytes_total{device!~'lo'}[5m])", "legendFormat": "Recv {{device}}" },
        { "expr": "rate(node_network_transmit_bytes_total{device!~'lo'}[5m])", "legendFormat": "Trans {{device}}" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 30, "gradientMode": "opacity", "lineInterpolation": "smooth" }
        }
      }
    },
    {
      "datasource": "Loki",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "id": 22,
      "options": {
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "repeat": "service",
      "repeatDirection": "v",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{compose_service=~\"$service\"}"
        }
      ],
      "title": "$service Logs",
      "type": "logs"
    }
  ],
  "schemaVersion": 37,
  "style": "dark",
  "tags": [
    "health",
    "traffic",
    "system",
    "alloy",
    "logs",
    "loki"
  ],
  "templating": {
    "list": [
      {
        "current": {},
        "datasource": "Loki",
        "definition": "label_values({compose_service!=\"\"}, compose_service)",
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "name": "service",
        "options": [],
        "query": "label_values({compose_service!=\"\"}, compose_service)",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 0,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "System & Traffic Health",
  "uid": "system-traffic-health-alloy",
  "version": 5
}
